<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_reminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_border"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.reminder.ReminderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_header_medicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Diabetes Pill"
            android:textColor="@color/medi_blue"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Medicine :"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_medicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Dose :"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_dose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Due Time :"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_due"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_take_medicine"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:background="@drawable/button_start"
            android:backgroundTint="@color/medi_medicine"
            android:fontFamily="@font/quicksand_bold"
            android:text="Take my medication"
            android:textColor="@color/medi_medicine_text"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>