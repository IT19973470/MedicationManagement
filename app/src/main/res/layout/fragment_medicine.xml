<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_medicine"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/quicksand_bold"
                android:text="Sickness :"
                android:textColor="@color/medi_medicine_text"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinner_sicknesses"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:background="@drawable/input_border"
                android:fontFamily="@font/quicksand_semibold"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                android:paddingRight="5dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/quicksand_bold"
                android:text="Medicine :"
                android:textColor="@color/medi_medicine_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txt_medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/quicksand_semibold"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                android:paddingRight="5dp"
                android:paddingBottom="8dp"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btn_took_medicine"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_crud"
                android:backgroundTint="@color/medi_medicine"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/add_medication"
                android:textColor="@color/medi_medicine_text"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_crud"
                android:backgroundTint="@color/medi_medicine"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/update_medication"
                android:textColor="@color/medi_medicine_text"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lbl_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Amexo"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Lumigen"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Pfizer"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Panadol"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Asprin"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:text="Xalatan"
                    android:textColor="@color/medi_medicine_text"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/font_awesome_free_solid_900"
                    android:text="\uf061"
                    android:textColor="@color/medi_medicine_next"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>