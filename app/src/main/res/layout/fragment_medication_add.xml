<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_medication_add"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/quicksand_bold"
                android:text="Medication Status"
                android:textColor="#009688"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/card_border"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_header_medication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Abc"
                    android:textColor="@color/medi_blue"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Total Pills :"
                    android:textColor="#101010"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lbl_total_pills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="50"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Last added pills :"
                    android:textColor="#101010"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lbl_lastadded_pills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="5"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="4">-->

            <!--                <TextView-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:autoSizeTextType="uniform"-->
            <!--                    android:fontFamily="@font/quicksand_bold"-->
            <!--                    android:text="Boxes :"-->
            <!--                    android:textColor="#101010"-->
            <!--                    android:textSize="15dp" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/txt_due"-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_weight="5"-->
            <!--                    android:autoSizeTextType="uniform"-->
            <!--                    android:fontFamily="@font/quicksand_semibold"-->
            <!--                    android:text="2"-->
            <!--                    android:textColor="#7A7A7A"-->
            <!--                    android:textSize="15dp" />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Dose :"
                    android:textColor="#101010"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lbl_medi_dose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="2 pills"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Interval :"
                    android:textColor="#101010"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lbl_interval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="6 hours"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Pills will end on :"
                    android:textColor="#101010"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lbl_medi_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="2021-05-06 AT 5:30 PM"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <include layout="@layout/fragment_medication_add_pills" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Dose :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_dose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_semibold"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Interval :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_intervalH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_semibold"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="h"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_intervalM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_semibold"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="m"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="First Medication At :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="4">

                <TimePicker
                    android:id="@+id/txt_first_medication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_semibold"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:textSize="16dp"
                    android:timePickerMode="spinner" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btn_save_pills"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_crud"
                    android:backgroundTint="@color/medi_medication"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Add Pills"
                    android:textColor="@color/medi_medication_text"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/btn_update_pills"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_crud"
                    android:backgroundTint="@color/medi_medication_not_clicked"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Update"
                    android:textColor="@color/medi_medication_text"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="3"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Remove Pills :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_remove_pills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_semibold"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_remove_pills"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_crud"
                    android:backgroundTint="@color/medi_medication"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Remove"
                    android:textColor="@color/medi_medication_text"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_remove_medication"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_crud"
                android:backgroundTint="@color/medi_medication_delete"
                android:fontFamily="@font/quicksand_bold"
                android:text="Delete Medication"
                android:textColor="@color/medi_medication_delete_text"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>